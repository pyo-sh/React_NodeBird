{
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true // eslint가 js에서 html같은 코드를 사용하는 걸 허용
        }
    },
    "env": {
        "browser": true,    // 브라우저 환경이니깐
        "node": true        // 리액트는 노드를 사용하므로
    },
    "extends": [
        "eslint:recommended",           // eslint가 추천하는 코딩 스타일
        "plugin:react/recommended"      // react를 코딩할 때 eslint가 추천하는 스타일
    ],
    "plugins": [    // react와 import / export 문법, hooks 를 허용하게 해주는 플러그인 (직접 설치해야 한다)
        "import",   // npm i eslint-plugin-import
        "react-hooks"   // npm i eslint-plugin-react eslint-plugin-react-hooks
    ]
}